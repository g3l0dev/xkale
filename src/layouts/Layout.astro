---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import GoogleAnalitycs from "../data/googleAnalitycs.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <GoogleAnalitycs />
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" media="" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <Nav />
    <main>
      <slot />
    </main>
    <Footer />
    <style is:global>
      @font-face {
        font-family: "Public Sans";
        src: url("/fonts/PublicSans-VariableFont_wght.ttf")format("truetype");
      }
      body{
        font-family: "Public Sans";
      }
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        border: 0;
        position: relative;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        text-wrap: balance;
      }
      p {
        text-wrap: pretty;
        margin-block-end: 1rem;
        margin-block-start: 1rem;
      }
    </style>
  </body>
</html>
