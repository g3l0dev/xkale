---
import SectionContainer from "../../components/SectionContainer.astro";

const CX = [
  {
    title: "Consultoría CX",
    url: "/consultoria-cx",
    id: "CONSULTORIA-CX",
  },
  {
    title: "crm de servicios",
    url: "/crm-de-servicios",
    id: "CRM",
  },
  {
    title: "contact center omnicanal",
    url: "/contact-center-omnicanal",
    id: "call-center",
  },
  {
    title: "voz y analítica del cliente",
    url: "/voz-y-analitica-del-cliente",
    id: "voz-y-analitica-del-cliente",
  },
];
---

<SectionContainer class="h-[160vh] xl:h-[80vh]">
  <div
    class="grid grid-cols-[repeat(_auto-fit,_minmax(300px,_1fr)_)] gap-[20px] w-full h-full">
    {
      CX.map(({ title, url, id }) => (
        <article class="full h-full">
          <div class="bg-cx w-full p-4">
            <h3 class="text-white text-pretty text-xl uppercase font-bold">
              {title}
            </h3>
          </div>
          <div
            class={`w-full h-full bg-[url('/image/cx/${id}.webp')] bg-center bg-cover bg-no-repeat overflow-hidden group`}>
            <a
              href={url}
              class="w-full h-full bg-cx/80 flex flex-col justify-center items-center text-white uppercase -translate-x-[100%] group-hover:translate-x-0 transition-all duration-300">
              leer más
            </a>
          </div>
        </article>
      ))
    }
  </div>
</SectionContainer>
