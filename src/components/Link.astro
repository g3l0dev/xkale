---
import { Icon } from "astro-icon/components";
interface Props {
  text?: string;
  href: string;
  icon?: {
    name?: string;
    side?: "left" | "right";
  };
  isFilled?: boolean;
  borderVisible?: boolean;
  classes?: string;
  class?: string;
  target?: string;
  rel?: string;
}

const {
  text,
  href,
  icon,
  isFilled = true,
  borderVisible = false,
  target,
  rel,
  classes,
  ...rest
} = Astro.props as Props;
---

<a href={href} class={Astro.props.class} target={target} rel={rel}{...rest}>
  {icon && icon.side === "left" && <Icon name={icon.name} />}
  <span>{text}</span>
  {icon && icon.side === "right" && <Icon name={icon.name} />}
</a>
