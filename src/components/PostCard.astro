<li>
  <a href={url}>
    <article class="grid grid-rows-[auto_auto_1fr_auto] min-h-80 gap-y-4 group">
      <div class="w-full h-80 overflow-hidden">
        <img
          src={`/image/posts/${image}.avif`}
          alt={title}
          class="w-full h-full object-cover group-hover:scale-110 duration-[0.3s]"
        />
      </div>
      <div class="flex items-center justify-between">
        <img src={`/image/iconBlog/${iconTag}.webp`} alt={tag} />
        <p class="text-sm uppercase">{tag}</p>
      </div>
      <h3 class="text-[1.17rem] leading-[1.4] font-bold text-balance ">{title}</h3>
      <div class="flex gap-x-4 items-center">
        <div class="overflow-hidden aspect-square h-12 rounded-full"><img src={`/image/authors/${authorImage}.avif`} alt={author} class="w-full h-full object-cover" /></div>
        <h4 class="text-sm font-block capitalize">{author}</h4>
      </div>
    </article>
  </a>
</li>

